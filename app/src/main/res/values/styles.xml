<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Title" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/robotoflex_bold</item>
        <item name="android:textColor">@color/neutral_70</item>
    </style>

    <style name="Title.Network">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">38sp</item>
    </style>

    <style name="Title.Detail">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="NetworkDescription" parent="Widget.AppCompat.TextView">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/robotoflex_bold</item>
        <item name="android:textColor">@color/neutral_40</item>
    </style>

</resources>